<Application
    x:Class="Ivirius_Text_Editor.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mica="using:MicaForUWP.Media">
    <Application.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="AppBackgroundBrush"/>
            <mica:BackdropMicaBrush x:Key="AppTitleBarBrush"/>
            <SolidColorBrush x:Key="AppTextBrush"/>
            <SolidColorBrush x:Key="AppToolbarTextBrush"/>
            <AcrylicBrush x:Key="AppToolbarBrush"/>
            <FontFamily x:Key="CustomFont">ms-appx:///SegoeFluentIcons2.ttf#Segoe Fluent Icons 2</FontFamily>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>